<%- include("./part/Header") %>
<main>
    <div class="payment-card mt-50 mb-50">
        <form method="post">
            <div class="card-type-logo">
                <img class="card-logo-img" src="https://img.icons8.com/color/48/000000/mastercard-logo.png" alt="Mastercard Logo">
            </div>
            <div class="payment-details">
                <div class="card-type-logo">
                    <img class="card-logo-img" src="https://img.icons8.com/color/48/000000/visa.png" alt="Visa Logo">
                    <span class="card-header">Card Information:</span>
                    <div class="card-holder-info">
                        <div class="form-row">
                            <span class="form-label">Cardholder Name</span>
                            <input type="text" placeholder="Bojan Viner" required pattern="[A-Za-z\s]+" title="Cardholder name must contain letters only.">
                        </div>
                    </div>
                    <div class="card-number-exp-cvv">
                        <div class="form-row">
                            <span class="form-label">Card Number</span>
                            <input type="text" placeholder="513452644444" required pattern="\d{12}" title="Card number must be 12 digits.">
                        </div>
                        <div class="form-row">
                            <div class="exp-date">
                                <span class="form-label">Exp. Date</span>
                                <!-- Input type="month" captures month and year -->
                                <input type="month" required title="Please enter the expiration date.">
                            </div>
                            <div class="cvv">
                                <span class="form-label">CVV</span>
                                <input type="text" placeholder="123" required pattern="\d{3}" title="CVV must be 3 digits.">
                            </div>
                        </div>
                    </div>
                    <div class="payment-amount">
                        <div class="form-row">
                            <span class="form-label">Amount</span>
                            <!-- Adjusted placeholder and removed pattern as it's a numeric input -->
                            <input type="number" placeholder="1000" required title="Please enter the amount.">
                        </div>
                    </div>
                    <button type="submit" class="pay-btn d-flex mx-auto"><b>Pay</b></button>
                    <!-- Added type="button" to prevent form submission on click -->
                    <button type="button" class="back-btn d-flex mx-auto" onclick="location.href='/'"><b>Back to Homepage</b></button>
                </div>
            </div>
        </form>
    </div>
</main>
<%- include("./part/Footer") %>