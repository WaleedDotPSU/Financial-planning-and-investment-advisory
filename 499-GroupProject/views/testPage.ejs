        function categorizeSpending(transactions) {
            const categories = {};
            transactions.forEach(transaction => {
                if (categories[transaction.category]) {
                    categories[transaction.category] += transaction.amount;
                } else {
                    categories[transaction.category] = transaction.amount;
                }
            });
            return categories;
        }

        function suggestFinancialPlanning(categories) {
            const suggestions = [];
            for (const category in categories) {
                if (categories.hasOwnProperty(category)) {
                    const suggestion = `Spend less on ${category} (${categories[category]}), limit spending to ${categories[category] * 0.8} for better savings.`;
                    suggestions.push(suggestion);
                }
            }
            return suggestions;
        }

        function displaySuggestions(suggestions) {
            const suggestionsElement = document.getElementById('suggestions');
            suggestionsElement.innerHTML = '<h2>Suggestions</h2>';
            suggestions.forEach(suggestion => {
                suggestionsElement.innerHTML += `<p>${suggestion}</p>`;
            });
        }

