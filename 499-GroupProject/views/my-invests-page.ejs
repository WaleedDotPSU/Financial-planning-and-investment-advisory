<!DOCTYPE html>
<html lang="en">
<head>
    <!-- General Meta Tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Site Specific Tags -->
    <title>Investments</title>
    <!-- Style Sheets -->
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/investments-page.css">
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="main-content"> <!-- Central container for content -->
        <header>
            <div class="wallet-balance" id="walletBalance"></div>
            <a href="/login-page" class="signout-link">Sign Out</a>
            <div>Initial value: $1000</div>
            <div>Current value: $1000</div>
            <div>Percentage of Profit/Loss: +10.6%</div>
            <div id="analysis">View Analysis: </div>
        </header>
        <canvas id="investment-chart" width="400" height="400"></canvas>
        <a href="/home-page" class="btn back-btn">Back to Homepage</a>
        <a href="/invest-options-page" class="btn back-btn">Stop Investment!</a>
    </div>

    <script>
        // Dummy data for investment analysis
        var investmentData = {
            labels: ['January', 'February', 'March', 'April', 'May', 'June'],
            datasets: [{
                label: 'Investment Value',
                data: [1000, 1100, 1200, 1150, 1250, 1300],
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }]
        };

        // Get canvas element
        var ctx = document.getElementById('investment-chart').getContext('2d');

        // Create chart
        var investmentChart = new Chart(ctx, {
            type: 'line',
            data: investmentData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Add link to analysis
        var analysisLink = document.getElementById('analysis');
        analysisLink.innerHTML += '<a href="/InvestmentAnalysis">View Detailed Analysis</a>';
    </script>

    <script>
        var g_walletBalance = parseFloat(localStorage.getItem("g_walletBalance"));

        document.getElementById("walletBalance").innerText = "Wallet Balance: " + g_walletBalance.toFixed(2) + " ريال";
    </script>

</body>
</html>
