<%- include("./part/LoginHead") %>
  <main>
    <div class="banner-container">
      <div class="sliding-banner">Welcome to Investopia</div>
      <img src="/css/img/BannerNoTitle.png" alt="Investopia Logo" class="banner-logo">
    </div>
    <div class="login-container">
      <form class="login-form" action="/LoginPage">
        <input type="text" placeholder="Username" name="username" required>
        <input type="password" placeholder="Password" name="password" required>
        <button type="submit">Login</button>
      </form>
      <div class="login-actions">
        <a href="/ForgetPassPage" class="forgot-password">Forgot Password?</a>
        <a href="/SingupPage" class="signup-link">Sign Up</a>
      </div>
    </div>
  </main>
<%- include("./part/LoginFoot") %>