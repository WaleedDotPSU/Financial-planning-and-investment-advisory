<!DOCTYPE html>
<html lang="en">
<head>
  <!-- general meta tags -->
  <meta charset="utf-8">
  <meta name="author" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- site specific tags -->
  <title>Ask Your AI</title>
  <!-- style sheets -->
  <link rel="stylesheet" href="css/reset.css">
  <link rel="stylesheet" href="css/ai-page.css">
</head>
<body>
  <header>
    <p>Ask Your AI</p>
  </header>
  <main>
    <section>
        <!-- Display AI responses here -->
        <div id="ai-responses"></div>
    </section>
    <section>
        <!-- Input field for user's question -->
        <input type="text" name="ask" id="ask-ai" placeholder="Ask your question...">
        <!-- Button to submit user's question -->
        <button onclick="askAI()">Submit</button>
    </section>
    <section>
        <!-- Link to go back to home page -->
        <a href="/home-page">Back</a>
    </section>
  </main>
  <footer>
   <!-- JavaScript files -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  // Function to send request to AI and display response
  function askAI() {
    var question = document.getElementById("ask-ai").value;
    var aiResponses = document.getElementById("ai-responses");

    console.log("Question:", question); // Debugging: Log user's question

    // Make AJAX request to server to get AI response
    $.ajax({
      type: "POST",
      url: "/ask-ai",
      data: { ask: question },
      success: function(response) {
        console.log("Response:", response); // Debugging: Log AI response
        aiResponses.innerHTML += "<p>User: " + question + "</p>";
        aiResponses.innerHTML += "<p>AI: " + response.message + "</p>";
        document.getElementById("ask-ai").value = ""; // Clear input field
      },
      error: function(xhr, status, error) {
        console.error("Error:", error);
        var errorMessage = "Sorry, something went wrong.";
        if (xhr.status === 401) {
          errorMessage = "Authentication error: Please check your API key.";
        } else if (xhr.status === 429) {
          errorMessage = "Quota exceeded: Please try again later.";
        }
        aiResponses.innerHTML += "<p>" + errorMessage + "</p>";
      }
    });
  }
</script>

  </footer>
</body>
</html>
