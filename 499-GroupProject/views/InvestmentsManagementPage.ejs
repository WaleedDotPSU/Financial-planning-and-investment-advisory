<!DOCTYPE html>
<html lang="en">
<head>
    <!-- General Meta Tags -->
    <meta charset="utf-8">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Site Specific Tags -->
    <title>RiskPage</title>

    <!-- Style Sheets -->
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/investmentsManagement.css">
</head>
<body>
    <header>
        <div class="wallet-balance"><p>Wallet Balance: <span><%= g_walletBalance %></p></span></div>
        <a href="/LoginPage" class="signout-link">Sign Out</a>
      </header>

    <main class="investments-options">
        <section class="investments-option">
            <p> Start Investing Today! </p>
        </section>
        <section class="investments-option">
            <a href="/InvestingPage" class="high-risk-link">High Risk</a>
        </section>
        <section class="investments-option">
            <a href="/InvestingPage" class="medium-risk-link">Medium Risk</a>
        </section>
        <section class="investments-option">
            <a href="/InvestingPage" class="low-risk-link">Low Risk</a>
        </section>
        <section class="investments-option">
            <a href="/InvestmentsPage" class="investments-link">My Investments</a>
        </section>

        <section class="navigation-option">
            <a href="/HomePage" class="back-home-link">Back to Homepage</a>
        </section>
    </main>

    <script>
        var g_walletBalance = Number('<%- JSON.stringify(g_walletBalance) %>')+' ريال';
  
        document.addEventListener('DOMContentLoaded', (event) => {
          document.querySelector('span').textContent = g_walletBalance;
        });
      </script>
    <%- include("./part/Footer.ejs") %>
