    const newBalance = 1200;

    // Update the wallet balance dynamically
    const walletBalanceElement = document.getElementById('wallet-balance');
    walletBalanceElement.innerHTML = `Wallet Balance: $${newBalance}`;

    // Store the updated balance globally (accessible by other parts of your code)
    window.walletBalance = newBalance;
